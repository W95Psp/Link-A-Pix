*
	font-family 'Open Sans'
body, html
	padding 0
	margin 0
h1
	padding 20
	margin 0
	text-align center
table
	margin auto
	border-collapse collapse
	td
		width 30px
		height 30px
		text-align center
		border 1px solid #EEE
		input
			text-align center
			width 30px
			height 30px
			background-color transparent
			border none
			COLORS = ( #FFFFFF #f1c40f #7f8c8d #1abc9c #2ecc71 #9b59b6 #e74c3c #e67e22 #2b85c1 #27ae60 #3498db #2c3e50 )
			for c in (0..11)
				&[valeur={"'"+c+"'"}]
					color darken(COLORS[c], 30%)
					if c>0
						font-weight bold
	tr:nth-child(2n)
		td:nth-child(2n)
			background-color #FFFAFF
	tr:nth-child(2n+1)
		td:nth-child(2n+1)
			background-color #FFFAFF
.content
	width 800px
	margin auto
	background-image url('back.png')
	box-shadow 0px 0px 8px 0px #DDD
	padding 20px
	padding-bottom 100px
	
li.solution
	display inline-block
	width 150px
	cursor normal
	&[state='true']
		font-weight bold
button[state='true']
	font-weight bold
input.dim
	width 50px
	text-align center